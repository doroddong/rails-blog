<div class="container">

  <header class="jumbotron my-4">
    <h1 class="display-3">Most Hit!!</h1>
    <p class="lead">This is Most Hit</p>
    <a href="#" class="btn btn-primary btn-lg">More!!</a>
  </header>

  <div class= "row">
    <% @post.each do |post| %>
      <%= link_to post_path(post), class:"text-dark", style:"text-decoration: none;" do %>
        <div class= "col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
            
            <div class="card-body">
              <h4 class="card-title text-decoration-none"><%= post.title %></h4>
              <h6 class="card-subtitle mb-2 text-muted ">Category</h6>
              <br>
              <% if !post.image.url.nil? %>
                <!--<p><img src="<%= post.image.url %>" style="width:150px;height:150px;"></p> -->
                <%= image_tag post.image.url ,style:"width:100%; height:150px;"%>
              <% end %>

              <p class="card-text">
                <%= post.description %>
              </p>
              <br>
              
              <p class="text-muted">
                by
                <a href="#" class="author">
                <% if !post.user.nil? %>
                  <%=post.user.email %>
                <% else %>
                  신원미상
                <% end %>
                </a>
              </p>
              <div class="d-flex position-relative align-middle justify-content-start">
                <% if !post.user.nil? && !current_user.nil? %>
                  <% if  current_user.id == post.user_id %>
                    <%= link_to "Edit" , edit_post_path(post)%>  &nbsp; 
                    <%= link_to "Delete", post_path(post), method: "DELETE" %>  &nbsp; 
                  <% end %>
                <% end %>
                <%= render partial:"posts/shared/toggle_like.html.erb", class:"position-relative justify-content-end", locals: {object: post} %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
</div>

<div class="d-flex justify-content-end">
    <%= button_to "Post", new_post_path , {method: :get , class:"btn btn-primary btn-lg"} %>
</div>
