<div>
  <% @post.each do |post| %>
  <div>
    <article>
      <h2>
        <a href="#"><%= post.title %></a>
      </h2>
      <p>
        <span><%= post.description %>
      </p>
        
      <%= link_to "show" , post_path(post) %>
      <%= link_to "Edit" , edit_post_path(post)%>
      <%= link_to "Delete", post_path(post), method: "DELETE" %>
  </div>
  <% end %>
</div>

<li>
  <%= link_to "Post", new_post_path %>
</li>