<h1>Show page</h1>


<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Description</th>
  </tr>
  </thead>

  <tbody>
  <tr>
    <td><%= @post.id %>
    <td><%= @post.title %>
    <td><%= @post.description %>
  </tr>
  </tbody>
</table>

<div class="d-flex justify-content-end">
  <% if !@post.user.nil? && !current_user.nil? %>
    <% if  current_user.id == @post.user_id %>
      <%= button_to "Edit" , edit_post_path(@post.id), {method: :get, class:"btn btn-dark" }%>  &nbsp; 
      <%= button_to "Delete", post_path(@post.id), {method: :delete, class:"btn btn-dark"} %>  &nbsp; 
    <% end %>
  <% end %>
</div>

<h2><%= @comments.count %> Comments</h2>  <!-- 추후 업뎃 -->

<div id="comments">
  <% @comments.each do |comment| %>
    <div id="<%=comment.id%>-comment">
      <%= render partial:"comments/show.html.erb", class:"", locals: {comment: comment} %>
    </div>
  <% end %>
</div>

<%= render partial:"comments/new.html.erb", class:"bottem-fixed p-10 m-10 fixed-bottom" %>

