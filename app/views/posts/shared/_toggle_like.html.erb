<script type="text/javascript">

  $("#toggle_like").click(function (){
    $(this).toggleClass("btn-primary btn-dark")
    $(this).addClass("btn-dark");
    $(this).removeClass("btn-primary");
  })

  })

</script>


<% if current_user.likes.find_by(post_id: object.id)  %>
  <%= link_to "쪼아요", toggle_like_post_path(object.id), class:"btn btn-md btn-primary", remote: true, id:"toggle_like" %>
<% else %>
  <%= link_to "시러요", toggle_like_post_path(object.id), class:"btn btn-md btn-dark", remote: true, id: "toggle_like" %>
<% end %>