<div class ="container">
  <br>

  <h1>New page</h1>

  <%= form_for @post do |f| %>
    <%= f.label :title, class:"form-group" %> <br/>
    <%= f.text_area :title, class: "form-control", placeholer: "title" %><br/>
    
    <%= f.file_field :image, class:"form-control" %><br>

    <%= f.label :description %> <br/>
    <%= f.text_area :description, class: "form-control", placeholer: "description" %><br/>
    
    <%= f.hidden_field :user_id, class: "form-control", value: current_user.id %><br/>

    <%= f.submit "Post!", class:"btn btn-primary" %>
  <% end %>
</div>
