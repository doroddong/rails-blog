<li style="list-style:none;">
  <div class="d-flex">
    <img src="https://image.winudf.com/v2/image1/Y29tLmtha2FvLmZyaWVuZHNzdGlja2VyYXBwX2ljb25fMTU1MDYyMTM4OV8wNjQ/icon.png?w=170&fakeurl=1" width="70px" height="70px"/>
    <div class="m-2 flex-column">
      <p class="h5"><%= comment.user.email %></p>
      <p class="text-muted"><%= comment.created_at.strftime("%Y.%m.%d  %H:%M:%S") %></p>
    </div>
  </div>
  <div style="text-indent:60px;" class="font-weight-bolder" id="<%= comment.id %>-content">
    <p><%= comment.content %></p>
  </div>
  <div class="d-flex p-2">
    <%= link_to "수정", edit_post_comment_path(comment.post_id,comment.id), remote:true, class:"text-danger font-weight-bolder" %> &nbsp; &nbsp;
    <%= link_to "삭제", post_comment_path(comment.post_id,comment.id), method: :delete, remote: true, class:"text-danger font-weight-bolder" %>
  </div>
  <hr>
</li>
