<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <form class="form-signin">
                <div class="form-label-group">
                  <div class="field">
                    <%= f.label :email,for:"inputEmail" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" %>
                  </div>
                </div>

                <div class="form-label-group">
                  <div class="field">
                    <%= f.label :password,class:"card-signin" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="custom-control custom-switch my-3">
                    <% if devise_mapping.rememberable? %>
                        <%= f.check_box :remember_me ,type:"checkbox", class:"custom-control-input", id:"customSwitch1", checked:"" %>
                        <%= f.label :remember_me , class: "custom-control-label" ,for:"customSwitch1" %>
                    <% end %>
                  </div>
                </div>

                <div class="actions">
                  <%= link_to "Log in",user_session_path, class: "btn btn-lg btn-primary btn-block" %>
                </div>

                <br>
                <%= render "devise/shared/links" %>

                <hr class="my-4">
                <button class="btn btn-lg btn-google btn-block" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
                <button class="btn btn-lg btn-facebook btn-block" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>
              </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>